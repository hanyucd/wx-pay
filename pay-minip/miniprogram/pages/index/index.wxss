
.main {
  width: 100vw;
  height: 100vh;
}

.img-bg {
  width: 100%;
  height: 100%;
}

.btn-wrap {
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  bottom: 100rpx;
  width: 70%;
}

.btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 80rpx;
  background: #D94C4C;
  color: #fff;
  margin-bottom: 40rpx;
  font-size: 30rpx;
  border-radius: 40rpx;
}
