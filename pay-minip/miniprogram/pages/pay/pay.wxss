.main {
  width: 100vw;
  height: 100vh;
}

.img-bg {
  width: 100%;
  height: 100%;
}

.pay-wrap {
  position: fixed;
  top: 200rpx;
  left: 30rpx;
  right: 30rpx;
  bottom: 0;
}

.pay-title {
  font-size: 40rpx;
  color: #fff;
}

.pay-money-wrap {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-top: 60rpx;
}

.pay-money-item {
  width: calc((100% - 30rpx) / 2);
  height: 120rpx;
  text-align: center;
  line-height: 120rpx;
  border-radius: 10rpx;
  color: #333;
  background: #F2F4F6;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}
.pay-money-item-active {
  color:#FF3418;
  background-color: #FFEBE8;
}

.pay-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80%;
  height: 90rpx;
  margin: 0 auto;
  margin-top: 90rpx;
  font-size: 30rpx;
  border-radius: 50rpx;
  color: #fff;
  background: #D94C4C;
  box-shadow: 0 8rpx 8rpx 0 rgba(255, 106, 106, .57);
}
